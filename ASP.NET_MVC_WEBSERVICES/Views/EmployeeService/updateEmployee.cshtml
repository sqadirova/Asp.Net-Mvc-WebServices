
@{
    ViewBag.Title = "updateEmployee";
    var id = Request.QueryString["ID"];
    var name = Request.QueryString["NAME"];
    var birth = Request.QueryString["BIRTHDATE"];
    var gender = Request.QueryString["GENDER"];
}

<h2>Update Employee</h2>
    <form method="post" action="@Url.Action("updateEmployee")">

        Id:<input type="text" name="id" value=@id />
        Name:<input type="text" name="name" value=@name />
        BirthDate:<input type="datetime" name="birthdate" value=@birth />
        Gender:<input type="text" name="gender" value=@gender />
        <input type="submit" value="update" />
    </form>


